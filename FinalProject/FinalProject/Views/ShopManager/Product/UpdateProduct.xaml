<Window x:Class="FinalProject.Views.ShopManager.Product.UpdateProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Product"
        Height="450" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F4F4">

    <Grid>
        <!-- Form Container -->
        <Border Background="White" Padding="20" BorderBrush="#DDD" BorderThickness="1" 
                Margin="20" Effect="{DynamicResource ShadowEffect}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Text="Update Product" FontSize="20" FontWeight="Bold" Foreground="#333"
                           HorizontalAlignment="Center" Grid.Row="0" Margin="0 0 0 15"/>

                <!-- Brand -->
                <!-- Brand -->
                <Label Grid.Row="1" Content="Brand:" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="1" ItemsSource="{Binding Brands}" 
           DisplayMemberPath="Name" 
           SelectedItem="{Binding textboxItem.Brand, Mode=TwoWay}" 
           Padding="5" BorderBrush="#CCC" Margin="120,0,21,26" Grid.RowSpan="2"/>

                <!-- Category -->
                <!-- Category -->
                <Label Grid.Row="2" Content="Category:" FontWeight="Bold" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="2" ItemsSource="{Binding Categories}" 
           DisplayMemberPath="Name" 
           SelectedItem="{Binding textboxItem.Category, Mode=TwoWay}" 
           Padding="5" BorderBrush="#CCC" Margin="120,0,21,28" Grid.RowSpan="2"/>

                <!-- Model -->
                <Label Grid.Row="3" Content="Model:" FontWeight="Bold"/>
                <TextBox Grid.Row="3" Margin="120 0 0 0" Text="{Binding textboxItem.Model, Mode=TwoWay}" 
                         Padding="5" BorderBrush="#CCC" Width="213" HorizontalAlignment="Left"/>

                <!-- Full Name -->
                <Label Grid.Row="4" Content="Full Name:" FontWeight="Bold"/>
                <TextBox Grid.Row="4" Margin="120 0 0 0" Text="{Binding textboxItem.FullName, Mode=TwoWay}" 
                         Padding="5" BorderBrush="#CCC" Width="213" HorizontalAlignment="Left"/>

                <!-- Description -->
                <Label Grid.Row="5" Content="Description:" FontWeight="Bold"/>
                <TextBox Grid.Row="5" Margin="120 0 0 0" Text="{Binding textboxItem.Description, Mode=TwoWay}" 
                         Padding="5" BorderBrush="#CCC" Width="213" HorizontalAlignment="Left"/>

                <!-- Price -->
                <Label Grid.Row="6" Content="Price:" FontWeight="Bold"/>
                <TextBox Grid.Row="6" Margin="120 0 0 0" Text="{Binding textboxItem.Price, Mode=TwoWay}" 
                         Padding="5" BorderBrush="#CCC" Width="213" HorizontalAlignment="Left"/>

                <!-- Is Deleted Checkbox -->
                <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="120 10 0 0">
                    <CheckBox Content="Is Deleted" IsChecked="{Binding textboxItem.IsDeleted, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                    <Button Content="Update" Command="{Binding UpdateCommand}" Width="110" Height="40" 
                            Background="#FFA500" Foreground="White" FontWeight="Bold" 
                            Margin="10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFA500"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E69500"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Cancel" Width="110" Height="40" Background="#DC3545" Foreground="White" 
                            FontWeight="Bold" Click="Cancel_Click" Margin="10" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DC3545"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Margin" Value="10"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C82333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
